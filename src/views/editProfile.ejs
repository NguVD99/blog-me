
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thêm Bài Mới</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/login.css" />
    <link rel="stylesheet" href="/fonts/themify-icons/themify-icons.css">
</head>

<body>
    <%- include('./partials/header') %>

    <div class="main">
        <form action="/edit-profile" method="POST" class="form">
            <h3 class="heading">Chỉnh sửa thông tin</h3>
    
            <div class="spacer"></div>

            <div class="form-group">
                <label for="mylogn" class="form-lable">Tên Đăng Nhập</label>
                <input type="text" id="mylogn" name="loginname" value="<%= user.loginname %>" required class="from-control" />
                <span class="form-message"></span>
            </div>

            <div class="form-group">
                <label for="myname" class="form-lable">Tên Đầy Đủ</label>
                <input type="text" id="myname" name="fullname" value="<%= user.fullname %>" required class="from-control" />
                <span class="form-message"></span>
            </div>

            <div class="form-group">
                <label for="mynemail" class="form-lable">Email</label>
                <input type="email" id="mynemail" name="email" value="<%= user.email %>" required class="from-control" />
                <span class="form-message"></span>
            </div>

            <button class="form-submit">Cập Nhật</button>
        </form>
    </div>



    <%- include('./partials/footer') %>
    <%- include('./partials/modalSearch') %>


</body>

</html>