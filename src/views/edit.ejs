<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit a usera</title>
    <link rel="stylesheet" href="/css/style.css">
</head>

<body>

    <div class="topnav">
        <a href="/">Home</a>
        <a href="/create">Create Users</a>
    </div>

    <div class="form-add-new">
        <form action="/update-user" method="POST">
            <fieldset>
                <legend>Edit a Uses</legend>

                <div class="input-group d-none">
                    <label>ID: </label>
                    <input type="text" name="userId" value="<%= userEdit.id %>" />
                </div>

                <div class="input-group">
                    <label>Name: </label>
                    <input type="text" name="myname" value="<%= userEdit.Name %>" />
                </div>

                <div class="input-group">
                    <label>Email: </label>
                    <input type="text" name="email" value="<%= userEdit.Email %>" />
                </div>

                <div class="input-group">
                    <label>Address: </label>
                    <input type="text" name="address" value="<%= userEdit.Address %>" />
                </div>

                <div class="input-group">
                    <label>City: </label>
                    <input type="text" name="city" value="<%= userEdit.City %>" />
                </div>

                <div>
                    <button>Save</button>
                </div>

            </fieldset>
        </form>
    </div>
</body>

</html>