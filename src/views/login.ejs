<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/fonts/themify-icons/themify-icons.css" <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/login.css" />
    <title>Đăng ký</title>
</head>

<body>
    <%- include('./partials/header') %>
        <div class="main">
            <form action="" method="POST" class="form" id="form-1">
                <h3 class="heading">Đăng ký thành viên</h3>
                <p class="desc">Cùng nhau học lập trình ❤️</p>

                <div class="spacer"></div>

                <div class="form-group">
                    <label for="fullname" class="form-lable">Tên đầy đủ</label>

                    <input type="text" name="fullname" id="fullname" placeholder="VD: Vũ Duy Ngự"
                        class="from-control" />
                    <span class="form-message"></span>
                </div>

                <div class="form-group">
                    <label for="email" class="form-lable">Email</label>
                    <input type="email" name="email" id="email" placeholder="VD: abc@gmail.com" class="from-control" />
                    <span class="form-message"></span>
                </div>

                <div class="form-group">
                    <label for="password" class="form-lable">Nhập mật khẩu</label>
                    <input type="password" name="password" id="password" placeholder="Nhập mật khẩu"
                        class="from-control" />
                    <span class="form-message"></span>
                </div>

                <div class="form-group">
                    <label for="password_confirmation" class="form-lable">Nhập lại mật khẩu</label>
                    <input type="password" name="password_confirmation" id="password_confirmation"
                        placeholder="Nhập lại mật khẩu" class="from-control" />
                    <span class="form-message"></span>
                </div>

                <div class="form-group">
                    <label for="avatar" class="form-lable">Ảnh đại diện</label>
                    <input type="file" name="avatar" id="avatar" class="from-control" />
                    <span class="form-message"></span>
                </div>

                <div class="form-group">
                    <label for="province" class="form-lable">Tỉnh/TP</label>
                    <select name="province" id="province" class="from-control">
                        <option value="">-- Chọn Tỉnh/TP --</option>
                        <option value="hni">Hà Nội</option>
                        <option value="hcm">Hồ Chí Minh</option>
                        <option value="hpg">Hải Phòng</option>
                    </select>
                    <span class="form-message"></span>
                </div>

                <div class="form-group">
                    <label for="password_confirmation" class="form-lable">Giới tính</label>
                    <div>
                        <input type="checkbox" name="gender" value="male" class="from-control" />
                        Nam
                    </div>
                    <div>
                        <input type="checkbox" name="gender" value="famale" class="from-control" />
                        Nữ
                    </div>
                    <div>
                        <input type="checkbox" name="gender" value="orther" class="from-control" />
                        Khác
                    </div>
                    <span class="form-message"></span>
                </div>

                <button class="form-submit">Đăng ký</button>
            </form>
        </div>

        <script src="../public/js/validator.js"></script>

        <script>
            // Mong muốn của chúng ta
            Validator({
                form: "#form-1",
                formGroupSelector: ".form-group",
                errorSelector: ".form-message",
                rules: [
                    Validator.isRequired("#fullname", "Vui lòng nhập đầy đủ tên bạn"),
                    Validator.isEmail("#email"),
                    Validator.isRequired("#avatar"),
                    Validator.minLength("#password", 6),
                    Validator.isRequired("#password_confirmation"),
                    Validator.isRequired("#province"),
                    Validator.isRequired("input[name='gender']"),
                    Validator.isConfirmed(
                        "#password_confirmation",
                        function () {
                            return document.querySelector("#form-1 #password").value;
                        },
                        "Mật khẩu nhận lại không chính xác"
                    ),
                ],
                onSubmit: function (data) {
                    //Call API
                    console.log(data);
                },
            });
        </script>
        <%- include('./partials/footer') %>
</body>

</html>