<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/js/main.js">
    <link rel="stylesheet" href="/fonts/themify-icons/themify-icons.css"> 
</head>

<body>
    <%- include('partials/header') %>

    <div class="container">
        <div class="container-profile">
            <h2 class="name-profile">Hồ Sơ Cá Nhân</h2>
            <div class="profile-card">
                <p><strong>Tên:</strong> <%= user.fullname %></p>
                <p><strong>Tên Đăng Nhập:</strong> <%= user.loginname %></p>
                <p><strong>Email:</strong> <%= user.email %></p>
                <% if (user.created_at) { %>
                    <p><strong>Ngày tạo:</strong> <%= new Date(user.created_at).toLocaleDateString('vi-VN') %></p>
                <% } else { %>
                    <p><strong>Ngày tạo:</strong> Chưa có dữ liệu</p>
                <% } %>
                <a href="/edit-profile" class="btn btn-primary">Chỉnh sửa</a>
            </div>
        </div>
    </div>

    <%- include('partials/footer') %>

</body>

</html>