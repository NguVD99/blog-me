
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Home</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/js/main.js">
    <link rel="stylesheet" href="/fonts/themify-icons/themify-icons.css"> 
</head>

<body>
<%- include('./partials/header') %>

<div class="container">
  <h2 class="title">Thùng rác</h2>
  <div class="grid__row">
    <% listTrash.forEach(function(information) { %>
      <div class="grid__column-3">
        <div class="item">
          <div class="bg-category">
            <h2 class="bg-category-name">Đã xóa</h2>
          </div>
          <a class="container-item" href="#">
            <img class="container-item-img" src="<%= information.image %>" alt="">
            <div class="container-item-timesee">
                <small class="time">
                    <i class="ti-timer"></i>
                    <%= information.timeAgo %>
                </small>
                <small>
                    <i class="ti-eye"></i>
                    <%= information.views %>
                </small>
            </div>
            <h2 class="container-item-name">
                <%= information.nameInformation %>
            </h2>
            <div class="container-item-footer">
                <div class="author">
                    <img class="avatar-img" src="/images/avatar.png" alt="">
                    <div class="name-avatar">Vũ Duy Ngự</div>
                </div>
                <div class="item-footer-like">
                    <i class="ti-heart"></i>
                </div>
            </div>
          </a>
          <div class="container-btn">
            <form action="/restore/<%= information.id %>" method="post">
              <button class="btn-item">Khôi phục</button>
            </form>
            <form action="/force-delete/<%= information.id %>" method="post" onsubmit="return confirm('Xóa vĩnh viễn?');">
              <button class="btn-item">Xóa</button>
            </form>
          </div>
        </div>
      </div>
    <% }) %>
  </div>

  <% if (listTrash.length === 0) { %>
    <p class="not-trash">Không có mục nào trong thùng rác.</p>
  <% } %>
</div>

<%- include('./partials/footer') %>

</body>

</html>