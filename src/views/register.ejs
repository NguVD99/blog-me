<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/fonts/themify-icons/themify-icons.css">
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/login.css"/>
    <title>Đăng ký</title>
</head>

<body>
    <%- include('./partials/header') %>
        <div class="main">
            <form action="/register-user" method="POST" class="form">
                <h3 class="heading">Đăng ký thành viên mới</h3>
                <p class="desc">Cùng nhau học lập trình ❤️</p>

                <div class="spacer"></div>

                <div class="form-group">
                    <label for="loginname" class="form-lable">Tên Đăng Nhập</label>
                    <input type="text" name="loginname" id="loginname" placeholder="VD: VDN123" class="from-control" />
                    <span class="form-message"></span>
                </div>

                <div class="form-group">
                    <label for="fullname" class="form-lable">Tên Đầy Đủ</label>
                    <input type="text" name="fullname" id="fullname" placeholder="VD: Vũ Duy Ngự"
                        class="from-control" />
                    <span class="form-message"></span>
                </div>

                <div class="form-group">
                    <label for="email" class="form-lable">Email</label>
                    <input type="email" name="email" id="email" placeholder="VD: abc@gmail.com" class="from-control" />
                    <span class="form-message"></span>
                </div>

                <div class="form-group">
                    <label for="password" class="form-lable">Nhập Mật Khẩu</label>
                    <input type="password" name="password" id="password" placeholder="Nhập mật khẩu"
                        class="from-control" />
                    <span class="form-message"></span>
                </div>

                <!-- <p class="desc">Chưa có tài khoản? <a class="active" href="/register">Đăng ký</a></p>

                <p class="desc">Quên mật khẩu? <a href="">Lấy lại mật khẩu</a></p> -->


                <div class="form-group">
                    <label for="password_confirmation" class="form-lable">Nhập Lại mật Khẩu</label>
                    <input type="password" name="password_confirmation" id="password_confirmation"
                        placeholder="Nhập lại mật khẩu" class="from-control" />
                    <span class="form-message"></span>
                </div>

                <!-- <div class="form-group">
                    <label for="avatar" class="form-lable">Ảnh đại diện</label>
                    <input type="file" name="avatar" id="avatar" class="from-control" />
                    <span class="form-message"></span>
                </div> -->

                <button class="form-submit">Đăng Ký</button>
            </form>
        </div>

        <script src="/js/validator.js"></script>

        <script>
            // Mong muốn của chúng ta
            Validator({
                form: "#form-1",
                formGroupSelector: ".form-group",
                errorSelector: ".form-message",
                rules: [
                    Validator.isRequired("#fullname", "Vui lòng nhập đầy đủ tên bạn"),
                    Validator.isEmail("#email"),
                    Validator.isRequired("#avatar"),
                    Validator.minLength("#password", 6),
                    Validator.isRequired("#password_confirmation"),
                    Validator.isConfirmed(
                        "#password_confirmation",
                        function () {
                            return document.querySelector("#form-1 #password").value;
                        },
                        "Mật khẩu nhận lại không chính xác"
                    ),
                ],
                onSubmit: function (data) {
                    //Call API
                    console.log(data);
                },
            });
        </script>
    <%- include('./partials/footer') %>
    <%- include('./partials/modalSearch') %>
</body>

</html>