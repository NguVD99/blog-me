<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thêm Bài Mới</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/fonts/themify-icons/themify-icons.css" </head>

<body>

    <%- include('./partials/header') %>

        <div class="form-add-new">
            <form action="/create-user" method="POST">
                <fieldset>
                    <legend>Thêm Bài Mới</legend>

                    <div class="input-group">
                        <label>Name information: </label>
                        <input class="input-item" type="text" name="myinformation" />
                    </div>

                    <div class="input-group">
                        <label>Link Image: </label>
                        <input class="input-item" type="text" name="myimage" />
                    </div>

                    <div class="input-group">
                        <label>Link Document: </label>
                        <input class="input-item" type="text" name="mydoc" />
                    </div>



                    <div>
                        <button>Save</button>
                    </div>

                </fieldset>
            </form>
        </div>

        <%- include('./partials/footer') %>


</body>

</html>