        <div class="main">
            <form action="/create-user" method="POST" class="form">
                <h3 class="heading">Thêm bài học mới</h3>
                <p class="desc">Cùng nhau học lập trình ❤️</p>

                <div class="spacer"></div>

                <div class="form-group">
                    <label for="myifm" class="form-lable">Tên Bài Học Mới</label>
                    <input type="text" name="myinformation" id="myifm" placeholder="VD: Học lập trình "
                        class="from-control" />
                    <span class="form-message"></span>
                </div>

                <div class="form-group">
                    <label for="myimg" class="form-lable">Link Ảnh</label>
                    <input type="text" name="myimage" id="myimg" placeholder="VD: https//:abcd.png "
                        class="from-control" />
                    <span class="form-message"></span>
                </div>

                <div class="form-group">
                    <label for="mydo" class="form-lable">Link Thông Tin Bài</label>
                    <input type="text" name="mydoc" id="mydo" placeholder="VD: https//: ... " class="from-control" />
                    <span class="form-message"></span>
                </div>

                <div class="form-group">
                    <label for="category" class="form-lable">Danh Mục</label>
                    <select name="linkcategory" id="category" class="from-control">
                        <option value="">-- Chọn Danh Mục --</option>
                        <option value="Ngôn Ngữ">Ngôn Ngữ</option>
                        <option value="Thủ Thuật">Thủ Thuật</option>
                        <option value="Data Base">Data Base</option>
                    </select>
                    <span class="form-message"></span>
                </div>

                <button class="form-submit">Save</button>
            </form>
        </div>

