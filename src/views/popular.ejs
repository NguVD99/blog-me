<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Popular</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/fonts/themify-icons/themify-icons.css">
</head>

<body>
  <%- include('./partials/header') %>
  <h1 class="title">Bài viết phổ biến</h1>

  <div class="grid">
    <div class="grid__row">
      <% listUsers.forEach(function(post) { %>
        <div class="grid__column-3">
          <div class="item">
            <div class="bg-category">
              <h2 class="bg-category-name"><%= post.linkCategorie %></h2>
            </div>
            <a class="container-item" href="/post/<%= post.id %>">
              <img class="container-item-img" src="<%= post.image %>" alt="">

              <div class="container-item-timesee">
                <small class="time"><i class="ti-timer"></i> <%= post.timeAgo %></small>
                <small><i class="ti-eye"></i> <%= post.views %></small>
              </div>
              <h2 class="container-item-name"><%= post.nameInformation %></h2>
              <div class="container-item-footer">
                <div class="author">
                  <img class="avatar-img" src="/images/avatar.png" alt="">
                  <div class="name-avatar">Vũ Duy Ngự</div>
                </div>
                <div class="item-footer-like">
                  <i class="ti-heart"></i>
                </div>
              </div>
            </a>
          </div>
        </div>
      <% }) %>
    </div>
  </div>

  <%- include('./partials/footer') %>
  <%- include('./partials/modalSearch') %>

</body>

</html>