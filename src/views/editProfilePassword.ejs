
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Thêm Bài Mới</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="/css/base.css">
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/login.css" />
    <link rel="stylesheet" href="/fonts/themify-icons/themify-icons.css">
</head>

<body>
    <%- include('./partials/header') %>

    <div class="main">
        <form action="/change-password" method="POST" class="form">
            <h3 class="heading">Đổi mật khẩu</h3>
        
            <div class="spacer"></div>

            <div class="form-group">
                <label for="mypw" class="form-lable">Mật Khẩu Cũ</label>
                <input type="password" id="mypw" name="oldPassword" required class="from-control" />
                <span class="form-message"></span>
            </div>

            <div class="form-group">
                <label for="mypwn" class="form-lable">Mật Khẩu Mới</label>
                <input type="password" id="mypwn" name="newPassword" required class="from-control" />
                <span class="form-message"></span>
            </div>

            <button class="form-submit">Đổi Mật Khẩu</button>
        </form>
    </div>


    <%- include('./partials/footer') %>
    <%- include('./partials/modalSearch') %>


</body>

</html>